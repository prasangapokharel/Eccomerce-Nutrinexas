  "meta": {
    "project": "Admin Management System",
    "date": "2025-10-04",
    "prepared_by": "Software Development Manager"
  },
  "product_overview": "An all-inclusive admin management system for e-commerce platforms, enabling administrators to efficiently manage products, orders, users, staff, coupons, inventory, deliveries, customers, referrals, and withdrawals through a unified dashboard with CRUD operations and reporting.",
  "core_goals": [
    "Provide a centralized admin dashboard for real-time statistics and overview.",
    "Enable complete CRUD operations for product management.",
    "Streamline order processing and management for efficiency.",
    "Manage user accounts, staff, and delivery personnel with role-based administration.",
    "Facilitate coupon, discount, and referral program management to boost promotions.",
    "Control inventory, including suppliers and purchases, with up-to-date tracking.",
    "Handle withdrawal requests and financial operations securely.",
    "Improve customer and curior management for enhanced operational flow."
  ],
  "key_features": [
    "Admin dashboard with statistics and overview for quick insights.",
    "Product management module with add, edit, delete, and list functionalities.",
    "Order management with order creation, status update, and detailed view.",
    "User and staff management including account creation, updates, and deletion.",
    "Coupon system for creating, editing, activating, and deactivating discounts.",
    "Inventory management covering suppliers, product stocks, and purchase records.",
    "Delivery management to handle delivery personnel records and assignments.",
    "Customer management interface for maintaining customer data.",
    "Referral program management with referral statistics and tracking.",
    "Withdrawal request processing and status management."
  ],
  "user_flow_summary": [
    "Admin logs into the system and views the dashboard overview.",
    "Admin accesses the product section to add, edit, delete, or view products.",
    "Receiving and managing orders through order creation and status updates.",
    "Managing staff and user data through dedicated management modules.",
    "Creating and managing coupons and discounts for promotions.",
    "Monitoring inventory supplies and managing supplier information.",
    "Assigning and managing curior details and their vehicle types.",
    "Handling customer data entry and edits.",
    "Reviewing referral program performance and statistics.",
    "Processing and updating withdrawal requests status."
  ],
  "validation_criteria": [
    "All CRUD operations for products, orders, users, staff, coupons, suppliers, curiors, and customers perform successfully and reflect in UI.",
    "Dashboard statistics load dynamically and provide accurate summaries.",
    "APIs respond with appropriate status codes: 200 for successful retrieval, 201 for creation, and 200 for updates and deletions.",
    "Payment SDKs (Khalti and eSewa) integrate successfully if used in transactions.",
    "Image handling via ImageKit and Intervention Image works correctly for product and staff images.",
    "PDF reports generated through DOMPDF are accurate and download properly.",
    "Referral and withdrawal data updates reflect promptly in admin views.",
    "User authentication and authorization restrict unauthorized access appropriately."
  ],
